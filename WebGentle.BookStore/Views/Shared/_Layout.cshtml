<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/Site.css" rel="stylesheet" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/images/ico.ico" width="30" height="30" />
                    Book Store
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/home/aboutus">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/home/contactus">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/book/GetAllBooks">All Books</a>
                        </li>
                    </ul>
                    <form class="d-flex" role="search">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" href="#">Login</a>
                                <a class="btn btn-primary" href="#">Register</a>
                            </li>
                        </ul>
                    </form>

                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody();
    </main>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            Copyright &copy; Book Store @DateTime.Now.Year
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    @RenderSection("scripts", required: false);

</body>

</html>

